# vim as default
export EDITOR="vim"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Prefer US English and use UTF-8
# skip if on a pod
if [[ ! -d "/var/run/secrets/kubernetes.io/" ]]; then
	export LC_ALL="en_US.UTF-8"
	export LANG="en_US"
fi

# here's LS_COLORS
# github.com/trapd00r/LS_COLORS

# Try to use gdircolors if available, otherwise fallback to dircolors.
if command -v gdircolors >/dev/null 2>&1; then
    _dircolors_cmd="gdircolors"
elif command -v dircolors >/dev/null 2>&1; then
    _dircolors_cmd="dircolors"
else
    _dircolors_cmd=""
fi

if [ -n "$_dircolors_cmd" ] && [ -r "$HOME/.dircolors" ]; then
    eval "$("$_dircolors_cmd" -b "$HOME/.dircolors")"
fi
unset _dircolors_cmd

# Convinience variables
export DATE=$(date "+%Y-%m-%d%n")

